{
  "name": "ts-monorepo",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/bs-platform",
      "**/reason-promise",
      "**/bs-fetch",
      "**/reason-react-native",
      "**/reason-react"
    ]
  },
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "test": "lerna run test"
  },
  "dependencies": {
    "react-native": "0.64.0"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~7.0.0",
    "doctoc": "~2.0.0",
    "eslint": "~7.19.0",
    "lerna": "~3.22.0",
    "typescript": "~4.1.0"
  }
}